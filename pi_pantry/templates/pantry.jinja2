{% extends "base.jinja2" %} 

{% block content %}
<h1>My Pantry</h1>
<table id="pantry">
    <thead>
        <tr>
        <th>Name</th>
        <th>Size</th>
        <th>Details</th>
    </thead>
    <tbody>
    {% for item in pantry %}
    <tr>
        <td>{{item.name}}</td>
        <td>{{item.size}}</td>
        <td id="detail_link"><a id="show_details" style="text-decoration:none" href="{{request.route_url('detail', upc=item.upc)}}">Details</a></td>
    </tr>
    {% endfor %}
    </tbody>
</table>
<h1>Shopping List</h1>
<table id="shopping_list">
    <thead>
        <tr>
        <th>Name</th>
        <th>Size</th>
    </thead>
    <tbody>
    {% for item in cart %}
    <tr>
        <td>{{item.name}}</td>
        <td>{{item.size}}</td>
    </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock content %}

