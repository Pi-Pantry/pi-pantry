{% extends "base.jinja2" %} 

{% block content %}
<ul>
    {% for item in pantry %}
    <h2>{{item.name}}</h2>
    <p>{{item.size}}</p>
    <p type="hidden" value={{item.upc}}></p>
    <a href="{{request.route_url('detail', upc=item.upc)}}">More Details</a>
    {% endfor %}
</ul>

<table>
     {% for item in cart %}
    <p>{{item.name}}</p>
    <p>{{item.size}}</p>
     {% endfor %}
</table>
{% endblock content %}
