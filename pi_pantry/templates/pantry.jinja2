{% extends "base.jinja2" %} 

{% block content %}
<ul>
    {% for item in data %}
    <h2>{{item.name}}</h2>
    <p>{{item.size}}</p>
    <a href="{{request.route_url('detail', upc=item.upc)}}">More Details</a>
    {% endfor %}
</ul>

{% endblock content %}

<table id="shopping">
    <thead>
        <tr>
        <th>Item</th>
        <th>Size</th>
        <th>Quantity</th>
        <th>Details</th>
        <th>Shopping List</th>
        </tr><a href="{{request.route_url('detail', upc=item.upc)}}">More Details</a>
    </thead>
    <tbody>
    {% for item in data %}
    <tr>
        <td>{{item.name}}</td>
        <td>{{item.size}}</td>
        <td>{{item.qty}}</td>
        <td><a href="{{request.route_url('detail', upc=item.upc)}}"></a>Details</td>
        <td><button id="purchased"></button><input type="submit">Purchased</button></td>
    </tr>
    {% endfor %}
    </tbody>
</table>