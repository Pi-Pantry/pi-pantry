{% extends "base.jinja2" %}

{% block content %}

<table>
    <h3>-Pantry-</h3>
    {% for item in pantry %}
    <p>{{item.name}}</p>
    <p>{{item.size}}</p>
    <a href="{{request.route_url('detail', upc=item.upc)}}">More Details</a>


    {% endfor %}
</table>


<table>
    <h3>-Cart-</h3>
     {% for item in cart %}
    <p>{{item.name}}</p>
    <p>{{item.size}}</p>
     {% endfor %}
</table>
{% endblock content %}
