<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>My Pantry</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="{{request.static_url('pi_pantry:static/reset.css')}}">
        <link rel="stylesheet" href="{{request.static_url('pi_pantry:static/base.css')}}">
        <link rel="stylesheet" href="{{request.static_url('pi_pantry:static/layout.css')}}">
        <link rel="stylesheet" href="{{request.static_url('pi_pantry:static/modules.css')}}">
    </head>
    <body>
        <header>
          <nav>
            <a href="{{request.route_url('home')}}">
                <img id="stk_logo" src="./static/The-Pantry.jpg" alt="">
            </a>
                <h1 id="app_title">My Pantry</h1>
            <ul>
              <li><a href="{{request.route_url('home')}}">Home</a></li>
              <li><a href="{{request.route_url('auth')}}">Login</a></li>
              {% if request.authenticated_userid %}
              <li><a href="{{request.route_url('pantry')}}">Pantry</a></li>
              <li><a href="{{request.route_url('manage_item')}}">Manage Items</a></li>
              <li><a href="{{request.route_url('logout')}}">Logout</a></li>
              {% endif %}
            </ul>
          </nav>
        </header>

        <h1>PiPantry</h1>

        {% block content %}

        <p>Welcome to Your Pantry!</p>

        {% endblock content %}

        <footer>
            <p>&copy; PiPantry 2018</p>
        </footer>
    </body>
</html>
