{% extends 'base.jinja2' %}

{% block content %}
<center>
  <h2>Manage Items</h2>
  <h6>Here you are able to add, remove, or edit an item from your pantry.</h6>
</center>


  <!--- IF ERROR --->
  {% if err %}
  <h3>{{err}}</h3>
  {% endif %}

  <!-- ADD ITEM -->
  <form method='GET' action="{{request.route_url('manage_item')}}">
    <input type="hidden" name="csrf_token" value="{{request.session.get_csrf_token()}}">
    <fieldset>
      <legend>Add Item</legend>
      UPC SCAN: <input type='text' name='upc'>
    </fieldset>
  </form>

  <!-- DELETE ITEM -->
  <form method='POST' action="{{request.route_url('manage_item')}}">
    <fieldset>
      <legend>Remove Item</legend>
      UPC SCAN: <input type='text' name='upc'>
    </fieldset>
  </form>
</center>

  {% if err %}
  <form id='new-entry' method='POST' action='{{request.route_url('manage_item')}}'>
    <fieldset>
      <legend>FILL MISSING FORM</legend>
      ITEM UPC:     <input onmousedown='return false;' value='last scan id' name='upc'>
      NAME:         <input name='' value='Product name'>
      BRAND:        <input name='' value='Brand'>
      DESCRIPTION:  <input name='' value='Product Description'>
      CATEGORY:     <input name='' value='Product Category'>
      IMAGE:        <input name='' value='Image File'>
      SIZE:         <input name='' value='Product Weight'>
      MANUFACTURER: <input name='' value='Manufacturer'>
    </fieldset>
  </form>
  {% endif %}


{% endblock content %}
